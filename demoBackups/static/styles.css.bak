/* styles.css */

/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    display: flex;
}

.sidebar {
    width: 20%;
    background-color: #f4f4f4;
    padding: 15px;
    box-sizing: border-box;
}

.dashboard, .main-content {
    width: 80%;
    padding: 15px;
    box-sizing: border-box;
}

h2, h3 {
    margin-top: 0;
}

form {
    display: flex;
    flex-direction: column;
}

label {
    margin-top: 10px;
}

select, button {
    margin-top: 5px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

table, th, td {
    border: 1px solid #ddd;
}

th, td {
    padding: 8px;
    text-align: left;
}

/* Card Styles */
.card-link {
    text-decoration: none;
    color: inherit;
}

.card {
    display: inline-block;
    width: 30%;
    margin: 10px;
    padding: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    text-align: center;
    box-sizing: border-box;
}

.card h3 {
    margin: 0 0 10px;
}

.card p {
    margin: 0;
}

.green {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
}

.yellow {
    background-color: #fff3cd;
    border: 1px solid #ffeeba;
}

.red {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
}

